{
    "info": {
        "name": "REST API Versioning Demo",
        "description": "Collection to test API versioning using Accept header",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "item": [
        {
            "name": "Hello Endpoint v1",
            "request": {
                "method": "GET",
                "header": [
                    {
                        "key": "Accept",
                        "value": "application/json;v=1",
                        "type": "text"
                    }
                ],
                "url": {
                    "raw": "http://localhost:8083/hello",
                    "protocol": "http",
                    "host": ["localhost"],
                    "port": "8083",
                    "path": ["hello"]
                },
                "description": "Basic hello endpoint - version 1"
            }
        },
